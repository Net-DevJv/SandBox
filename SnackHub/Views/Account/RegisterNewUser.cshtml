@model RegisterViewModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Criar Conta";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="row" style="width: 100%; max-width: 400px;">
        <div class="col bg-white p-4 shadow-sm  rounded-3">
            <h3 class="mb-3 fw-bold text-center" style="font-size: 1.4rem;">Criar conta</h3>

            <p class="text-center">
                @Model.Email
                <a asp-action="LoginEmail" asp-controller="Account" class="ms-2">
                    Alterar
                </a>
            </p>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @using (Html.BeginForm("RegisterNewUser", "Account", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Email)

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.FullName, "Seu nome", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nome e sobrenome" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Password, "Senha (pelo menos 6 caracteres)", new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, "Insira a senha novamente", new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-warning w-100 rounded-pill" style="font-weight: bold;">
                    Criar conta
                </button>
            }

            <div class="mt-3 text-center">
                <small>
                    Já é cliente?
                    <a asp-action="LoginEmail" asp-controller="Account">Faça login</a>
                </small>
            </div>
        </div>    
    </div>
</div>
