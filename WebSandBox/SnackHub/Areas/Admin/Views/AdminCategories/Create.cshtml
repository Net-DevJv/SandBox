@model SnackHub.Models.Category

@{
    ViewData["Title"] = "Criar Categoria";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex align-items-center justify-content-center">
                    <i class="bi bi-plus-square me-2" style="font-size: 1.6rem; color: #FD862A;"></i>
                    <h4 class="card-title mb-0">Criar Categoria</h4>
                </div>

                <div class="card-body">
                    <form method="post" asp-action="Create">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Digite o nome da categoria..." })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Descrição da categoria..." })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status da Categoria</label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<CategoryStatus>()"></select>
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Retornar</a>
                            <button type="submit" class="btn btn-success">Criar Categoria</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
