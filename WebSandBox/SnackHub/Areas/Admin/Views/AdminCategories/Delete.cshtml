@model SnackHub.Models.Category

@{
    ViewData["Title"] = "Excluir Categoria";
    Layout = "_AdminLayout";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex align-items-center justify-content-center">
                    <i class="bi bi-trash me-2" style="font-size: 1.6rem; color: #FD862A;"></i>
                    <h4 class="card-title mb-0 text-danger">Excluir Categoria</h4>
                </div>

                <div class="card-body">
                    <p class="text-center text-danger fw-bold mb-4">
                        Tem certeza de que deseja excluir esta categoria?<br />
                        Esta ação não poderá ser desfeita.
                    </p>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Nome:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                    </dl>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Descrição:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>

                    <hr />

                    <form method="post" asp-action="Delete" asp-route-id="@Model.CategoryId">
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Retornar</a>
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
