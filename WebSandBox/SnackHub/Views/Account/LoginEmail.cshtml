@model LoginEmailViewModel
@{
    Layout = "_LoginLayout";  // Usa o layout especial para login
    ViewData["Title"] = "Login - Insira seu e-mail";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="row" style="width: 100%; max-width: 400px;">
        <div class="col bg-white p-4 rounded shadow-sm">
            <h3 class="mb-3">Faça login ou crie uma conta</h3>
            <p>Insira um e-mail</p>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @using (Html.BeginForm("LoginEmail", "Account", FormMethod.Post, new { @class = "mb-3" }))
            {
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Email, "E-mail", new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-warning w-100" style="font-weight: bold;">Continuar</button>
            }
        </div>
    </div>
</div>
