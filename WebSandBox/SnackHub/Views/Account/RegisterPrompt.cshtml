@model RegisterPromptViewModel

@{
    Layout = "_AccountLayout"; 
    ViewData["Title"] = "Novo Usuário";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="row" style="width: 100%; max-width: 400px;">
        <div class="col bg-white p-4 shadow-sm  rounded-3">
            <h3 class="mb-3 fw-bold text-center" style="font-size: 1.4rem;">Parece que você é novo na SnackHub</h3>

            <p class="text-center">
                @Model.Email
                <a asp-action="LoginEmail" asp-controller="Account" class="ms-2">
                    Alterar
                </a>
            </p>

            <p class="text-center">Vamos criar uma conta usando esse e-mail</p>

            <form asp-action="RegisterNewUser" asp-controller="Account" method="get">
                <input type="hidden" name="email" value="@Model.Email" />
                <button type="submit" class="btn btn-warning w-100 rounded-pill">
                    Prosseguir com a criação de uma conta
                </button>
            </form>

            <div class="mt-3 text-center">
                <small>
                    Já é cliente?
                    <a asp-action="LoginEmail" asp-controller="Account">Faça login</a>
                </small>
            </div>
        </div>
    </div>
</div>
