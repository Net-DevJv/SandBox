@model SnackModel

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid"></p>
    <h3>Preço : @Model.Price.ToString("c")</h3>
    <h4>@Model.SnackName</h4>

    <a asp-controller="Snack" asp-action="Details" asp-route-snackId="@Model.SnackId">@Model.SnackName</a>

    <p>@Model.ProductSummary</p>

    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="ShoppingCart" asp-action="AddItemToShoppingCart" asp-route-SnackId="@Model.SnackId">Incluir ao carrinho</a>
        </p>
    </div>
</div>