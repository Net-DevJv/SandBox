@model ShoppingCartViewModel

@{
    var totalItems = (Model.Items?.Sum(i => i.Quantity)) ?? 0;
}

<div class="white-hover-border" style="padding: 4px 8px; margin: 2px; font-size: 1.2rem; border: 2px solid transparent; border-radius: 6px; transition: border-color 0.2s;">

    <a class="nav-link text-light d-flex align-items-center position-relative" asp-controller="ShoppingCart" asp-action="Index" style="text-decoration: none; line-height: 1;">

        <span class="position-relative" style="display: inline-block;">

            <i class="bi bi-cart4"></i>

            <span class="position-absolute text-white" style="top: -15px; left: -20px; font-size: 1.2rem; line-height: 1; padding: 1px 5px;">
                @totalItems
            </span>
        </span>

        <span class="ms-1 fw-bold">Carrinho</span>
    </a>
</div>
