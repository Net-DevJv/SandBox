<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/img/logo/LogoSite.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SnackHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SideMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CategoryMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LanguageSelector.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ShoppingCartContainer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SearchBar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SearchIcon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/IconBorders.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav style="background-color: #111b25;">
            <div class="navbar-custom d-flex align-items-center flex-wrap">
                <div class="left-section d-flex align-items-center flex-wrap">
                    <div class="white-hover-border">
                        @await Html.PartialAsync("_SideMenu")
                    </div>

                    <div class="white-hover-border">
                        <a class="nav-link text-light d-flex align-items-center" asp-controller="Home" asp-action="Index">
                            <span style="font-size: 1.5rem; font-weight: bold;">
                                <span style="color: #FCFEFB;">Snack</span><span style="color: #FD862A;">Hub</span><span style="color: #FCFEFB; font-size: 1rem;">.com</span>
                            </span>
                        </a>
                    </div>

                    <div class="white-hover-border">
                        <a class="nav-link text-light d-flex align-items-center" asp-controller="Home" asp-action="Index">
                            <span style="font-size: 1.5rem; font-weight: bold;">
                                <span style="color: #FCFEFB;">Snack</span><span style="color: #FD862A;">Hub</span><span style="color: #FCFEFB; font-size: 1rem;">.com</span>
                            </span>
                        </a>
                    </div>

                </div>

                <div class="center-section flex-grow-1 d-flex justify-content-center">
                    @await Html.PartialAsync("_Search")
                </div>

                <div class="right-section d-flex align-items-center">
                    <div class="white-hover-border">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </div>

                    <div class="white-hover-border">
                        @await Html.PartialAsync("_LanguageSelector")
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid text-center text-light" style="background-color: #232F3F; font-size: 1.4rem;">
            &copy; 2025 - SnackHub
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_Scripts")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
