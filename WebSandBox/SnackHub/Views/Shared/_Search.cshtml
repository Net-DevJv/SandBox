<!-- Exemplo de formulário com Bootstrap 5 -->
<form class="nav-link text-light d-flex align-items-center" style="flex: 1;" method="get" action="@Url.Action("Search", "Product")">
    <div class="input-group">
        <!-- Botão de Categorias como parte do input-group -->
        <div class="dropdown">
            <button type="button" class="btn btn-categories dropdown-toggle">
                Categorias
            </button>
            <ul class="dropdown-menu dropdown-scroll">
                <li><a class="dropdown-item" href="#">Todos os departamentos</a></li>
                <li><a class="dropdown-item" href="#">Lanches Naturais</a></li>
                <li><a class="dropdown-item" href="#">Lanches normais</a></li>
                <li><a class="dropdown-item" href="#">Sobremesas</a></li>
                <li><a class="dropdown-item" href="#">Bebidas</a></li>
            </ul>
        </div>

        <!-- Barra de Pesquisa -->
        <input class="form-control" type="search" placeholder="Pesquisar SnackHub.com.br" aria-label="Search" name="searchString" value="@ViewData["searchString"]" />

        <!-- Botão de Lupa -->
        <button class="btn btn-search" type="submit" style="background-color: #febd6b;">
            <i class="bi bi-search"></i>
        </button>
    </div>
</form>
